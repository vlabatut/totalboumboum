	<shadows>
		<shadow name="shadow" file="shadow.png" />
	</shadows>
	
	<images >
		<image name="appearing1" file="1.gif" folder="appearing"/>
		<image name="appearing2" file="2.gif" folder="appearing"/>
		<image name="appearing3" file="3.gif" folder="appearing"/>
		<image name="appearing4" file="4.gif" folder="appearing"/>		
		<image name="standing" file="standing.gif" folder="standing"/>		
	</images>

	<gestures>
		<gesture name="APPEARING" folder="appearing" proportional="true">
			<direction name="NONE">
				<step duration="200" file="1.gif" />
				<step duration="100" file="2.gif" />
				<step duration="100" file="3.gif" />
				<step duration="100" file="4.gif" />
			</direction>
		</gesture>

		<gesture name="BURNING" folder="burning">
			<direction name="NONE">
				<step duration="150" file="1.gif" />
				<step duration="75" file="2.gif" />
				<step duration="75" file="3.gif" />
				<step duration="75" file="4.gif" />
				<step duration="75" file="5.gif" />
				<step duration="75" file="6.gif" />
			</direction>
		</gesture>

		<gesture name="FALLING" folder="appearing" shadow="fallShadow" shadowYShift="-4" proportional="false">
			<direction name="NONE">
				<step duration="200" file="1.gif" />
				<step duration="100" file="2.gif" />
				<step duration="100" file="3.gif" />
				<step duration="100" file="4.gif" />
			</direction>
		</gesture>

	</gestures>
