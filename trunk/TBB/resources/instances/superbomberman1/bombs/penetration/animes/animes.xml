<?xml version="1.0" encoding="utf-8"?>
<animes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:noNamespaceSchemaLocation="../../../../../schemas/animes.xsd" 
		scale="1" default="standing" >
		
	<colors folder="colormaps" >
		<colormap name="BLACK" file="black" />
		<colormap name="BLUE" file="blue" />
		<colormap name="BROWN" file="brown" />
		<colormap name="CYAN" file="cyan" />
		<colormap name="GRASS" file="grass" />
		<colormap name="GREEN" file="green" />
		<colormap name="GREY" file="grey" />
		<colormap name="INDIGO" file="indigo" />
		<colormap name="ORANGE" file="orange" />
		<colormap name="PINK" file="pink" />
		<colormap name="PURPLE" file="purple" />
		<colormap name="RED" file="red" />
		<colormap name="RUST" file="rust" />
		<colormap name="ULTRAMARINE" file="ultramarine" />
		<colormap name="WHITE" file="white" />
		<colormap name="YELLOW" file="yellow" />
	</colors>
	
	<shadows folder="pictures">
 		<shadow name="shadow" file="shadow.png" />
	</shadows>
	
	<gestures folder="pictures">
		<gesture name="bouncing" repeat="true" shadow="shadow" shadowYShift="-3">
			<direction name="none">
				<step duration="300" file="2.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="2.gif" />
				<step duration="300" file="1.gif" />
			</direction>
		</gesture>
		
		<gesture name="burning" repeat="false">
			<direction name="none">
				<step duration="100" />
			</direction>
		</gesture>
		
		<gesture name="landing" repeat="true" shadow="shadow" >
			<direction name="none">
				<step duration="300" file="2.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="2.gif" />
				<step duration="300" file="1.gif" />
			</direction>
		</gesture>
		
		<gesture name="sliding" repeat="true" shadow="shadow">
			<direction name="none">
				<step duration="300" file="2.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="2.gif" />
				<step duration="300" file="1.gif" />
			</direction>
		</gesture>
		
		<gesture name="sliding-failing" repeat="true" shadow="shadow">
			<direction name="none">
				<step duration="300" file="3.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="3.gif" />
			</direction>
		</gesture>
		
		<gesture name="standing" repeat="true" shadow="shadow" >
			<direction name="none">
				<step duration="300" file="2.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="2.gif" />
				<step duration="300" file="1.gif" />
			</direction>
		</gesture>
		
		<gesture name="standing-failing" repeat="true" shadow="shadow">
			<direction name="none">
				<step duration="300" file="3.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="3.gif" />
			</direction>
		</gesture>
		
	</gestures>		
</animes>
