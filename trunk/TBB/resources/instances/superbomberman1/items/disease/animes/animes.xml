<?xml version="1.0" encoding="utf-8"?>
<animes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:noNamespaceSchemaLocation="../../../../../schemas/animes.xsd" 
		scale="1" >

	<gestures>

		<gesture name="APPEARING" repeat="false" folder="disappearing">
			<direction name="NONE">
				<step duration="30" file="4.gif" />
				<step duration="30" file="3.gif" />
				<step duration="30" file="2.gif" />
				<step duration="30" file="1.gif" />
			</direction>
		</gesture>

		<gesture name="DISAPPEARING" repeat="false" folder="disappearing">
			<direction name="NONE">
				<step duration="30" file="1.gif" />
				<step duration="30" file="2.gif" />
				<step duration="30" file="3.gif" />
				<step duration="30" file="4.gif" />
			</direction>
		</gesture>

		<gesture name="RELEASED" repeat="false" folder="standing" >
			<direction name="NONE">
				<step duration="85" >
					<image file="blue.gif" />
					<imageref name="smoke1" yShift="9" />
				</step>
				<step duration="105" >
					<image file="blue.gif" />
					<imageref name="smoke2" yShift="9" />
				</step>
				<step duration="80" >
					<image file="blue.gif" />
					<imageref name="smoke3" yShift="9" />
				</step>
				<step duration="60" >
					<image file="blue.gif" />
					<imageref name="smoke4" yShift="9" />
				</step>				
			</direction>
		</gesture>

		<gesture name="STANDING" repeat="true" folder="standing">
			<direction name="NONE">
				<step duration="50" file="red.gif" />
				<step duration="50" file="blue.gif" />
			</direction>
		</gesture>
		
	</gestures>		
</animes>
