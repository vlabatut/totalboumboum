	<selfModulations>
	</selfModulations>
	
	<otherModulations>
	</otherModulations>
	
	<actorModulations>
	</actorModulations>
	
	<targetModulations>
<!--  	CONSUME --> 
		<modulation frame="true" strength="0" >
			<action name="CONSUME" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="SOME" />
			<actorRestrictions />
			<targetRestrictions />
		</modulation>
	</targetModulations>
	
	<thirdModulations>
<!--  	APPEAR --> 
		<modulation frame="false" strength="0" >
			<action name="APPEAR" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="SOME" />
			<actorRestrictions>
				<ability strength="2"><name value="SPRITE_TRAVERSE_WALL" /></ability>
			</actorRestrictions>
			<targetRestrictions />
			<actorCircumstances contact="ANY" tilePosition="ANY" orientation="ANY" />
			<targetCircumstances  />
		</modulation>
		<modulation frame="true" strength="0" >
			<action name="APPEAR" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="SOME" />
			<actorRestrictions />
			<targetRestrictions />
			<actorCircumstances contact="ANY" tilePosition="ANY" orientation="ANY" />
			<targetCircumstances  />
		</modulation>
<!--  	CONSUME --> 
		<!-- prevent fire from consuming anything located under the block -->
		<modulation frame="true" strength="0" >
			<action name="CONSUME" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="FIRE" target="ANY" />
			<actorRestrictions />
			<targetRestrictions />
			<actorCircumstances />
			<targetCircumstances />
		</modulation>
<!--  	LAND --> 
		<modulation frame="false" strength="0" >
			<action name="LAND" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="SOME" />
			<actorRestrictions>
				<ability strength="2"><name value="SPRITE_TRAVERSE_WALL" /></ability>
			</actorRestrictions>
			<targetRestrictions />
			<actorCircumstances contact="ANY" tilePosition="ANY" orientation="ANY" />
			<targetCircumstances  />
		</modulation>
		<modulation frame="true" strength="0" >
			<action name="LAND" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="SOME" />
			<actorRestrictions />
			<targetRestrictions />
			<actorCircumstances contact="ANY" tilePosition="ANY" orientation="ANY" />
			<targetCircumstances  />
		</modulation>
<!--  	MOVELOW --> 
		<!-- ability to go through walls -> not an obstacle -->
		<modulation frame="false" strength="0" >
			<action name="MOVELOW" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="SOME" />
			<actorRestrictions>
				<ability strength="2"><name value="SPRITE_TRAVERSE_WALL" /></ability>
			</actorRestrictions>
			<targetRestrictions />
			<actorCircumstances contact="ANY" tilePosition="ANY" orientation="ANY" />
			<targetCircumstances  />
		</modulation>
		<!-- intersection, same tile -> not an obstacle -->
		<modulation frame="false" strength="0" >
			<action name="MOVELOW" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="SOME" />
			<actorRestrictions />
			<targetRestrictions />
			<actorCircumstances contact="INTERSECTION" tilePosition="SAME" orientation="ANY" />
			<targetCircumstances  />
		</modulation>
		<!-- intersection, different tile, same orientation -> obstacle -->
		<modulation frame="true" strength="0" >
			<action name="MOVELOW" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="SOME" />
			<actorRestrictions />
			<targetRestrictions />
			<actorCircumstances contact="INTERSECTION" tilePosition="NEIGHBOR" orientation="FACE" />
			<targetCircumstances  />
		</modulation>
		<!-- intersection, different tile, different orientation -> not an obstacle -->
		<modulation frame="false" strength="0" >
			<action name="MOVELOW" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="SOME" />
			<actorRestrictions />
			<targetRestrictions />
			<actorCircumstances contact="INTERSECTION" tilePosition="NEIGHBOR" orientation="BACK NEUTRAL OTHER" />
			<targetCircumstances  />
		</modulation>
		<!-- other -> obstacle -->
		<modulation frame="true" strength="0" >
			<action name="MOVELOW" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="SOME" />
			<actorRestrictions />
			<targetRestrictions />
			<actorCircumstances contact="COLLISION INTERSECTION" tilePosition="NEIGHBOR SAME" orientation="ANY" />
			<targetCircumstances  />
		</modulation>
	</thirdModulations>

</gesture-modulations>
