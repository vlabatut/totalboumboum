			<target-restrictions />
		</modulation>
		<modulation frame="true" strength="1" >
			<action name="LAND" direction="all" contact="all"
				tilePosition="all" orientation="all" actor="fire" />
			<actor-restrictions>
				<ability><name value="sprite-traverse-item" /></ability>
			</actor-restrictions>
			<target-restrictions />
