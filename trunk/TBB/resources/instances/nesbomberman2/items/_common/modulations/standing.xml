<?xml version="1.0" encoding="utf-8"?>
<gesture-modulations xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:noNamespaceSchemaLocation="../../../../../schemas/gesture_modulations.xsd" >

	<self-modulations>
	</self-modulations>
	
	<actor-modulations>
	</actor-modulations>
	
	<target-modulations>
	</target-modulations>
	
	<third-modulations>
<!--  	APPEAR --> 
		<modulation frame="true" strength="1" >
			<action name="APPEAR" direction="all" contact="all"
				tilePosition="all" orientation="all" actor="fire" target="all" />
			<actor-restrictions>
				<ability><name value="sprite-traverse-item" /></ability>
			</actor-restrictions>
			<target-restrictions />
		</modulation>
<!--  	DROP --> 
		<modulation frame="true" strength="1" >
			<action name="DROP" direction="all" contact="all"
				tilePosition="all" orientation="all" actor="all" target="all" />
			<actor-restrictions />
			<target-restrictions />
		</modulation>
<!--  	LAND --> 
		<modulation frame="true" strength="1" >
			<action name="LAND" direction="all" contact="all"
				tilePosition="all" orientation="all" actor="hero" />
