	<gestures>

		<gesture name="APPEARING" proportional="true" >
			<direction name="NONE">
				<step duration="30" name="appearing1" />
				<step duration="30" name="appearing2" />
				<step duration="30" name="appearing3" />
				<step duration="30" name="appearing4" />
				<step duration="30">
					<imageref name="permanent1" /> 
					<image file="icon.png" />
				</step>
			</direction>
		</gesture>

		<gesture name="DISAPPEARING" repeat="false" >
			<direction name="NONE">
				<step duration="30" name="appearing4" />
				<step duration="30" name="appearing3" />
				<step duration="30" name="appearing2" />
				<step duration="30" name="appearing1" />
			</direction>
		</gesture>

		<gesture name="RELEASED" repeat="false" >
			<direction name="NONE">
				<step duration="85" >
					<imageref name="permanent1" />
					<image file="icon.png" />
					<imageref name="smoke1" yShift="4" />
				</step>
				<step duration="105" >
					<imageref name="permanent1" />
					<image file="icon.png" />
					<imageref name="smoke2" yShift="4" />
				</step>
				<step duration="80" >
					<imageref name="permanent1" />
					<image file="icon.png" />
					<imageref name="smoke3" yShift="4" />
				</step>
				<step duration="60" >
					<imageref name="permanent1" />
					<image file="icon.png" />
					<imageref name="smoke4" yShift="4" />
				</step>				
			</direction>
		</gesture>

		<gesture name="STANDING" repeat="true" >
			<direction name="NONE">
				<step duration="200">
					<imageref name="permanent1" /> 
					<image file="icon.png" />
				</step>
				<step duration="200">
					<imageref name="permanent2" /> 
					<image file="icon.png" />
				</step>
			</direction>
		</gesture>
		
	</gestures>		
</animes>
