<?xml version="1.0" encoding="UTF-8"?>
<preferences xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../../../../../schemas/preferences.xsd">


	<categories>
		<category name="PASSIVE_CORRIDOR" criteria="ENEMY_DISTANCE SECURITY" />
		<category name="PASSIVE_BLOCKAGE" criteria="ENEMY_DISTANCE SECURITY" />
		<category name="BONUS" criteria="ITEM_WANT SECURITY" />
		<category name="BLOCKAGE" criteria="SECURITY CORRIDOR BLOCKAGE_SECURITY" />
		<category name="CORRIDOR" criteria="SECURITY CORRIDOR ENEMY_DISTANCE" />

	</categories>

	<tables>
		<table mode="ATTACKING">
			<combination category="PASSIVE_CORRIDOR" values="0 True" />
			<combination category="PASSIVE_BLOCKAGE" values="0 True" />

			<!-- Blockage Strategy -->
			<combination category="BLOCKAGE" values="True False True" />
			<combination category="BLOCKAGE" values="True True True" />

			<combination category="BLOCKAGE" values="False False True" />
			<combination category="BLOCKAGE" values="False True True" />

			<combination category="BLOCKAGE" values="True False False" />
			<combination category="BLOCKAGE" values="True True False" />

			<combination category="PASSIVE_BLOCKAGE" values="1 True" />
			<combination category="PASSIVE_BLOCKAGE" values="2 True" />

			<combination category="BLOCKAGE" values="False False False" />
			<combination category="BLOCKAGE" values="False True False" />

			<!-- Corridor strategy -->
			<combination category="CORRIDOR" values="True False 1" />
			<combination category="CORRIDOR" values="False False 1" />

			<combination category="CORRIDOR" values="True True 1" />

			<combination category="CORRIDOR" values="True True 2" />

			<combination category="CORRIDOR" values="True True 0" />

			<combination category="CORRIDOR" values="True False 2" />

			<combination category="CORRIDOR" values="True False 0" />

			<combination category="PASSIVE_CORRIDOR" values="1 True" />
			<combination category="PASSIVE_CORRIDOR" values="2 True" />

			<combination category="CORRIDOR" values="False False 2" />
			<combination category="CORRIDOR" values="False False 0" />
			<combination category="CORRIDOR" values="False True 0" />
			<combination category="CORRIDOR" values="False True 1" />
			<combination category="CORRIDOR" values="False True 2" />

			<combination category="PASSIVE_BLOCKAGE" values="0 False" />
			<combination category="PASSIVE_BLOCKAGE" values="1 False" />
			<combination category="PASSIVE_BLOCKAGE" values="2 False" />

			<combination category="PASSIVE_CORRIDOR" values="0 False" />
			<combination category="PASSIVE_CORRIDOR" values="1 False" />
			<combination category="PASSIVE_CORRIDOR" values="2 False" />
		</table>

		<table mode="COLLECTING">
			<!-- We want that item -->
			<combination category="BONUS" values="TRUE TRUE" />
			<combination category="BONUS" values="TRUE FALSE" />

			<!-- Get any item before anyone -->
			<combination category="BONUS" values="FALSE TRUE" />
			<combination category="BONUS" values="FALSE FALSE" />

			<combination category="PASSIVE_CORRIDOR" values="2 TRUE" />
			<combination category="PASSIVE_CORRIDOR" values="2 FALSE" />
			<combination category="PASSIVE_CORRIDOR" values="1 TRUE" />
			<combination category="PASSIVE_CORRIDOR" values="0 TRUE" />
			<combination category="PASSIVE_CORRIDOR" values="1 FALSE" />
			<combination category="PASSIVE_CORRIDOR" values="0 FALSE" />
		</table>
	</tables>

</preferences>

