<?xml version="1.0" encoding="utf-8"?>
<animes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:noNamespaceSchemaLocation="../../../../../xml/schemas/animes.xsd" 
		scale="8" default="standing" >
		
	<colors >
		<colorsprite name="red" folder="red" />
	</colors>
	
	
	<shadows folder="shadows">
 		<shadow name="small" file="small.png" />
 		<shadow name="medium" file="medium.png" />
 		<shadow name="large" file="large.png" />
	</shadows>
	
	<gestures>
		



		<gesture name="sliding" folder="working" repeat="false">
			<direction name="none">
				<step duration="240" file="01.png" shadow="large" />
				<step duration="240" file="02.png" shadow="medium" />
				<step duration="240" file="03.png" shadow="small" />
				<step duration="240" file="04.png" shadow="medium" />
				<step duration="240" file="05.png" shadow="large" />
				<step duration="240" file="06.png" shadow="medium" />
				<step duration="240" file="07.png" shadow="small" />
				<step duration="240" file="08.png" shadow="medium" />
				<step duration="240" file="09.png" shadow="large" />
				<step duration="240" file="10.png" shadow="medium" />
			</direction>
		</gesture>
		
		<gesture name="sliding-failing" folder="failing" repeat="true">
			<direction name="none">
				<step duration="240" file="1.png" shadow="small" />
				<step duration="240" file="2.png" shadow="medium" />
				<step duration="240" file="3.png" shadow="large" />
				<step duration="240" file="2.png" shadow="medium" />
			</direction>
		</gesture>
		
		<gesture name="standing" folder="working" repeat="false" >
			<direction name="none">
				<step duration="240" file="01.png" shadow="large" />
				<step duration="240" file="02.png" shadow="medium" />
				<step duration="240" file="03.png" shadow="small" />
				<step duration="240" file="04.png" shadow="medium" />
				<step duration="240" file="05.png" shadow="large" />
				<step duration="240" file="06.png" shadow="medium" />
				<step duration="240" file="07.png" shadow="small" />
				<step duration="240" file="08.png" shadow="medium" />
				<step duration="240" file="09.png" shadow="large" />
				<step duration="240" file="10.png" shadow="medium" />
			</direction>
		</gesture>
		
		<gesture name="standing-failing" folder="failing" repeat="true" >
			<direction name="none">
				<step duration="240" file="1.png" shadow="small" />
				<step duration="240" file="2.png" shadow="medium" />
				<step duration="240" file="3.png" shadow="large" />
				<step duration="240" file="2.png" shadow="medium" />
			</direction>
		</gesture>
		
	</gestures>		
</animes>
