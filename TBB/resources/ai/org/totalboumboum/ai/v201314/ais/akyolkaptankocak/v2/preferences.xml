<?xml version="1.0" encoding="UTF-8"?>
<preferences xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../../schemas/preferences.xsd">


	<categories>
		<category name="FATAL_ATTACK" criteria="SECURITY CORRIDOR ENEMY_DISTANCE AGENT_DISTANCE" />
		<category name="PASSIVE_ATTACK" criteria="ENEMY_DISTANCE SECURITY" />
		<category name="BONUS" criteria="ITEM_WANT SECURITY" />
	</categories>
	
	<tables>		
		<table mode="ATTACKING">
			<combination category="PASSIVE_ATTACK" values="0 TRUE" />
			<combination category="PASSIVE_ATTACK" values="0 FALSE" />
			<combination category="FATAL_ATTACK" values="TRUE TRUE 0 FALSE" />
			<combination category="FATAL_ATTACK" values="TRUE FALSE 0 FALSE" />
			<combination category="FATAL_ATTACK" values="TRUE FALSE 0 TRUE" />
			<combination category="FATAL_ATTACK" values="TRUE TRUE 1 FALSE" />
			<combination category="FATAL_ATTACK" values="FALSE TRUE 1 FALSE" />
			<combination category="FATAL_ATTACK" values="TRUE TRUE 2 TRUE" />
			<combination category="FATAL_ATTACK" values="TRUE TRUE 2 FALSE" />
			<combination category="FATAL_ATTACK" values="TRUE TRUE 1 TRUE" />
			<combination category="FATAL_ATTACK" values="TRUE FALSE 2 TRUE" />
			<combination category="FATAL_ATTACK" values="TRUE FALSE 2 FALSE" />
			<combination category="FATAL_ATTACK" values="FALSE FALSE 2 TRUE" />
			<combination category="FATAL_ATTACK" values="FALSE FALSE 2 FALSE" />
			<combination category="FATAL_ATTACK" values="TRUE FALSE 1 FALSE" />
			<combination category="FATAL_ATTACK" values="FALSE FALSE 1 FALSE" />
			<combination category="FATAL_ATTACK" values="TRUE FALSE 1 TRUE" />
			<combination category="FATAL_ATTACK" values="FALSE FALSE 1 TRUE" />
			<combination category="FATAL_ATTACK" values="TRUE TRUE 0 TRUE" />
			<combination category="FATAL_ATTACK" values="FALSE FALSE 0 TRUE" />
			<combination category="FATAL_ATTACK" values="FALSE FALSE 0 FALSE" />
			<combination category="FATAL_ATTACK" values="FALSE TRUE 2 FALSE" />
			<combination category="FATAL_ATTACK" values="FALSE TRUE 2 TRUE" />
			<combination category="FATAL_ATTACK" values="FALSE TRUE 0 FALSE" />
			<combination category="FATAL_ATTACK" values="FALSE TRUE 1 TRUE" />
			<combination category="FATAL_ATTACK" values="FALSE TRUE 0 TRUE" />
			<combination category="PASSIVE_ATTACK" values="1 TRUE" />
			<combination category="PASSIVE_ATTACK" values="1 FALSE" />
			<combination category="PASSIVE_ATTACK" values="2 TRUE" />
			<combination category="PASSIVE_ATTACK" values="2 FALSE" />
		</table>

		<table mode="COLLECTING">
			<!-- We want that item -->
			<combination category="BONUS" values="TRUE TRUE" />
			<combination category="BONUS" values="TRUE FALSE" />
			
			<!-- Get any item before anyone -->
			<combination category="BONUS" values="FALSE TRUE" />
			<combination category="BONUS" values="FALSE FALSE" />
			
			<combination category="PASSIVE_ATTACK" values="2 TRUE" />
			<combination category="PASSIVE_ATTACK" values="2 FALSE" />
			<combination category="PASSIVE_ATTACK" values="1 TRUE" />
			<combination category="PASSIVE_ATTACK" values="0 TRUE" />
			<combination category="PASSIVE_ATTACK" values="1 FALSE" />
			<combination category="PASSIVE_ATTACK" values="0 FALSE" />
		</table>
	</tables>	
	
</preferences>

