<?xml version="1.0" encoding="utf-8"?>
<gesture-modulations xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:noNamespaceSchemaLocation="../../../../../schemas/gesture_modulations.xsd" >

	<self-modulations>
	</self-modulations>
	
	<other-modulations>
	</other-modulations>
	
	<actor-modulations>
	</actor-modulations>
	
	<target-modulations>
	</target-modulations>
	
	<third-modulations>
<!--  	APPEAR --> 
		<modulation frame="false" strength="0" >
			<action name="APPEAR" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="ANY" />
			<actor-restrictions>
				<ability><name value="SPRITE_TRAVERSE_BOMB" /></ability>
			</actor-restrictions>
			<target-restrictions />
		</modulation>
		<modulation frame="true" strength="0" >
			<action name="APPEAR" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="ANY" />
			<actor-restrictions />
			<target-restrictions />
		</modulation>
<!--  	LAND --> 
		<modulation frame="false" strength="0" >
			<action name="LAND" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="ANY" />
			<actor-restrictions>
				<ability><name value="SPRITE_TRAVERSE_BOMB" /></ability>
			</actor-restrictions>
			<target-restrictions />
		</modulation>
		<modulation frame="true" strength="0" >
			<action name="LAND" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="ANY" />
			<actor-restrictions />
			<target-restrictions />
		</modulation>
<!--  	MOVELOW --> 
		<!-- ability to go through bombs -> not an obstacle -->
		<modulation frame="false" strength="0" >
			<action name="MOVELOW" direction="ANY" contact="ANY"
				tilePosition="ANY" orientation="ANY" actor="ANY" />
			<actor-restrictions>
				<ability><name value="SPRITE_TRAVERSE_BOMB" /></ability>
			</actor-restrictions>
			<target-restrictions />
		</modulation>
		<!-- intersection, same tile -> not an obstacle -->
		<modulation frame="false" strength="0" >
			<action name="MOVELOW" direction="ANY" contact="INTERSECTION"
				tilePosition="SAME" orientation="ANY" actor="ANY" />
			<actor-restrictions />
			<target-restrictions />
		</modulation>
		<!-- intersection, different tile, same orientation -> obstacle -->
		<modulation frame="true" strength="0" >
			<action name="MOVELOW" direction="ANY" contact="INTERSECTION"
				tilePosition="NEIGHBOR" orientation="FACE" actor="ANY" />
			<actor-restrictions />
			<target-restrictions />
		</modulation>
		<!-- intersection, different tile, different orientation -> not an obstacle -->
		<modulation frame="false" strength="0" >
			<action name="MOVELOW" direction="ANY" contact="INTERSECTION"
				tilePosition="NEIGHBOR" orientation="BACK NONE OTHER" actor="ANY" />
			<actor-restrictions />
			<target-restrictions />
		</modulation>
		<!-- other -> obstacle -->
		<modulation frame="true" strength="0" >
			<action name="MOVELOW" direction="ANY" contact="COLLISION INTERSECTION"
				tilePosition="NEIGHBOR SAME" orientation="ANY" actor="ANY" />
			<actor-restrictions />
			<target-restrictions />
		</modulation>
		
	</third-modulations>

</gesture-modulations>
