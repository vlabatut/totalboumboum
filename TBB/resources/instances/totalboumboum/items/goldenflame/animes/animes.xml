<?xml version="1.0" encoding="utf-8"?>
<animes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:noNamespaceSchemaLocation="../../../../../schemas/animes.xsd" 
		scale="8" preview="preview.png" >

	<gestures>

		<gesture name="APPEARING" proportional="true" >
			<direction name="NONE">
				<step duration="30" file="appearing1" />
				<step duration="30" file="appearing2" />
				<step duration="30" file="appearing3" />
				<step duration="30" file="appearing4" />
				<step duration="30">
					<imageref name="permanent1" /> 
					<image file="icone.png" />
				</step>
			</direction>
		</gesture>

		<gesture name="DISAPPEARING" repeat="false" >
			<direction name="NONE">
				<step duration="30" file="appearing4" />
				<step duration="30" file="appearing3" />
				<step duration="30" file="appearing2" />
				<step duration="30" file="appearing1" />
			</direction>
		</gesture>

		<gesture name="RELEASED" repeat="false" >
			<direction name="NONE">
				<step duration="85" >
					<imageref name="permanent1" />
					<image file="icone.png" />
					<imageref name="smoke1" yShift="33" />
				</step>
				<step duration="105" >
					<imageref name="permanent1" />
					<image file="icone.png" />
					<imageref name="smoke2" yShift="33" />
				</step>
				<step duration="80" >
					<imageref name="permanent1" />
					<image file="icone.png" />
					<imageref name="smoke3" yShift="33" />
				</step>
				<step duration="60" >
					<imageref name="permanent1" />
					<image file="icone.png" />
					<imageref name="smoke4" yShift="33" />
				</step>				
			</direction>
		</gesture>

		<gesture name="STANDING" repeat="true" >
			<direction name="NONE">
				<step duration="200">
					<imageref name="permanent1" /> 
					<image file="icone.png" />
				</step>
				<step duration="200">
					<imageref name="permanent2" /> 
					<image file="icone.png" />
				</step>
			</direction>
		</gesture>


		
	</gestures>		
</animes>
