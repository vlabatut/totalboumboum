<?xml version="1.0" encoding="utf-8"?>
<animes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:noNamespaceSchemaLocation="../../../../../../../schemas/animes.xsd" 
		scale="1" >

	<shadows>
		<shadow name="standShadow" file="shadow.png" />
	</shadows>

	<gestures>
		<gesture name="APPEARING" folder="appearing" proportional="true">
			<direction name="NONE">
				<step duration="150" file="1.gif" />
				<step duration="75" file="2.gif" />
				<step duration="75" file="3.gif" />
				<step duration="75" file="4.gif" />
				<step duration="75" file="5.gif" />
				<step duration="75" file="6.gif" />
			</direction>
		</gesture>

		<gesture name="BURNING" folder="burning">
			<direction name="NONE">
				<step duration="150" file="1.gif" />
				<step duration="75" file="2.gif" />
				<step duration="75" file="3.gif" />
				<step duration="75" file="4.gif" />
				<step duration="75" file="5.gif" />
				<step duration="75" file="6.gif" />
			</direction>
		</gesture>

		<gesture name="STANDING" folder="standing" repeat="true" shadow="standShadow" shadowYShift="2">
			<direction name="NONE">
				<step duration="800" file="1.gif" />
				<step duration="50" file="2.gif" />
				<step duration="50" file="3.gif" />
				<step duration="50" file="4.gif" />
				<step duration="800" file="5.gif" />
				<step duration="200" file="4.gif" />
				<step duration="200" file="3.gif" />
				<step duration="200" file="2.gif" />
				<step duration="800" file="1.gif" />
				<step duration="50" file="6.gif" />
				<step duration="50" file="7.gif" />
				<step duration="50" file="8.gif" />
				<step duration="800" file="9.gif" />
				<step duration="200" file="8.gif" />
				<step duration="200" file="7.gif" />
				<step duration="200" file="6.gif" />
			</direction>
		</gesture>
	</gestures>
</animes>
