	<colors folder="colormaps" >
		<colormap name="BLACK" file="black" />
		<colormap name="BLUE" file="blue" />
		<colormap name="BROWN" file="brown" />
		<colormap name="CYAN" file="cyan" />
		<colormap name="GRASS" file="grass" />
		<colormap name="GREEN" file="green" />
		<colormap name="GREY" file="grey" />
		<colormap name="INDIGO" file="indigo" />
		<colormap name="ORANGE" file="orange" />
		<colormap name="PINK" file="pink" />
		<colormap name="PURPLE" file="purple" />
		<colormap name="RED" file="red" />
		<colormap name="RUST" file="rust" />
		<colormap name="ULTRAMARINE" file="ultramarine" />
		<colormap name="WHITE" file="white" />
		<colormap name="YELLOW" file="yellow" />
	</colors>
	
	<shadows folder="pictures">
 		<shadow name="shadow" file="shadow.png" />
	</shadows>
	
	<gestures folder="pictures">
		<gesture name="APPEARING" folder="appearing" repeat="false" shadow="shadow" >
			<direction name="NONE">
				<step duration="75" file="1.gif" />
				<step duration="75" file="2.gif" />
				<step duration="75" file="3.gif" />
			</direction>
		</gesture>
		<gesture name="BOUNCING" folder="standing" repeat="true" shadow="shadow" shadowYShift="-3">
			<direction name="NONE">
				<step duration="300" file="2.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="2.gif" />
				<step duration="300" file="1.gif" />
			</direction>
		</gesture>
		
		<gesture name="BURNING" folder="standing" repeat="false">
			<direction name="NONE">
				<step duration="100" />
			</direction>
		</gesture>
		
		<gesture name="LANDING" folder="standing" repeat="true" shadow="shadow" >
			<direction name="NONE">
				<step duration="300" file="2.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="2.gif" />
				<step duration="300" file="1.gif" />
			</direction>
		</gesture>
		
		<gesture name="PUNCHED" folder="standing" repeat="true" shadow="shadow">
			<direction name="NONE">
				<step duration="300" file="2.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="2.gif" />
				<step duration="300" file="1.gif" />
			</direction>
		</gesture>
		
		<gesture name="SLIDING" folder="standing" repeat="true" shadow="shadow">
			<direction name="NONE">
				<step duration="300" file="2.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="2.gif" />
				<step duration="300" file="1.gif" />
			</direction>
		</gesture>
		
		<gesture name="SLIDING_FAILING" folder="standing" repeat="true" shadow="shadow">
			<direction name="NONE">
				<step duration="300" file="3.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="3.gif" />
			</direction>
		</gesture>
		
		<gesture name="STANDING" folder="standing" repeat="true" shadow="shadow" >
			<direction name="NONE">
				<step duration="300" file="2.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="2.gif" />
				<step duration="300" file="1.gif" />
			</direction>
		</gesture>
		
		<gesture name="STANDING_FAILING" folder="standing" repeat="true" shadow="shadow">
			<direction name="NONE">
				<step duration="300" file="3.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="3.gif" />
			</direction>
		</gesture>
		
	</gestures>		
</animes>
