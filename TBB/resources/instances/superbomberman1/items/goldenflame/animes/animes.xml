<?xml version="1.0" encoding="utf-8"?>
<animes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:noNamespaceSchemaLocation="../../../../../schemas/animes.xsd" 
		scale="1" >

	<gestures>

		<gesture name="APPEARING" repeat="false" folder="disappearing">
			<direction name="NONE">
				<step duration="30" file="4.gif" />
				<step duration="30" file="3.gif" />
				<step duration="30" file="2.gif" />
				<step duration="30" file="1.gif" />
			</direction>
		</gesture>

		<gesture name="DISAPPEARING" repeat="false" folder="disappearing">
			<direction name="NONE">
				<step duration="30" file="1.gif" />
				<step duration="30" file="2.gif" />
				<step duration="30" file="3.gif" />
				<step duration="30" file="4.gif" />
			</direction>
		</gesture>

		<gesture name="RELEASED" repeat="false" folder="released" yShift="9">
			<direction name="NONE">
				<step duration="85" file="1.gif" />
				<step duration="105" file="2.gif" />
				<step duration="80" file="3.gif" />
				<step duration="60" file="4.gif" />
			</direction>
		</gesture>

		<gesture name="STANDING" repeat="true" folder="standing">
			<direction name="NONE">
				<step file="standing.gif" />
			</direction>
		</gesture>
		
	</gestures>		
</animes>
