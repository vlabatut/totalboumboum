<?xml version="1.0" encoding="utf-8"?>
<animes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:noNamespaceSchemaLocation="../../../../../schemas/animes.xsd" 
		scale="1" >

	<gestures>
	
		<gesture name="APPEARING" repeat="false" folder="appearing">
			<direction name="NONE">
				<step duration="25" file="1.gif" />
				<step duration="25" file="2.gif" />
				<step duration="25" file="3.gif" />
				<step duration="25" file="4.gif" />
				<step duration="25" file="5.gif" />
				<step duration="25" file="6.gif" />
				<step duration="25" file="7.gif" />
				<step duration="25" file="8.gif" />
			</direction>
		</gesture>

		<gesture name="BURNING" repeat="false" folder="burning">
			<direction name="NONE">
				<step duration="140" file="1.gif" />
				<step duration="70"  file="2.gif" />
				<step duration="60"  file="3.gif" />
				<step duration="70"  file="4.gif" />
				<step duration="60"  file="5.gif" />
				<step duration="70"  file="6.gif" />
			</direction>
		</gesture>

		<gesture name="DISAPPEARING" repeat="false" folder="appearing">
			<direction name="NONE">
				<step duration="15" file="8.gif" />
				<step duration="15" file="7.gif" />
				<step duration="15" file="6.gif" />
				<step duration="15" file="5.gif" />
				<step duration="15" file="4.gif" />
				<step duration="15" file="3.gif" />
				<step duration="15" file="2.gif" />
				<step duration="15" file="1.gif" />
			</direction>
		</gesture>

	</gestures>		
</animes>
