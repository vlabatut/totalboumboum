<?xml version="1.0" encoding="utf-8"?>
<animes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:noNamespaceSchemaLocation="../../../../../../../../schemas/animes.xsd" 
		scale="1" >
		
	<shadows>
		<shadow name="standShadow" file="shadow.png" />
	</shadows>
	
	<gestures>
		<gesture name="APPEARING" folder="appearing" proportional="true">
			<direction name="NONE">
				<step duration="100" file="1.gif" />
				<step duration="100" file="2.gif" />
				<step duration="100" file="3.gif" />
				<step duration="100" file="4.gif" />
				<step duration="100" file="5.gif" />
				<step duration="100" file="6.gif" />
			</direction>
		</gesture>

		<gesture name="BURNING" folder="burning">
			<direction name="NONE">
				<step duration="150" file="1.gif" />
				<step duration="75" file="2.gif" />
				<step duration="75" file="3.gif" />
				<step duration="75" file="4.gif" />
				<step duration="75" file="5.gif" />
				<step duration="75" file="6.gif" />
			</direction>
		</gesture>
		
		<gesture name="HIDING" >
			<direction name="NONE">
				<step />
			</direction>
		</gesture>

		<gesture name="STANDING" folder="standing" repeat="true" shadow="standShadow" shadowYShift="3">
			<direction name="NONE">
				<step duration="100" file="1.gif" />
				<step duration="100" file="2.gif" />
				<step duration="100" file="1.gif" />
				<step duration="100" file="2.gif" />
				<step duration="100" file="1.gif" />
				<step duration="100" file="2.gif" />
				<step duration="100" file="1.gif" />
				<step duration="100" file="2.gif" />
				<step duration="100" file="1.gif" />
				<step duration="100" file="2.gif" />
				<step duration="100" file="1.gif" />
				<step duration="100" file="2.gif" />
				<step duration="1600" file="3.gif" />
			</direction>
		</gesture>
		
	</gestures>
</animes>
