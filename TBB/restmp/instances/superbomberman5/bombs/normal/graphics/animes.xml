<?xml version="1.0" encoding="utf-8"?>
<animes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:noNamespaceSchemaLocation="../../../../../xml/schemas/animes.xsd" 
		scale="1" default="standing" >
	<gestures>
		<gesture name="burning" repeat="false">
			<direction name="none">
				<step duration="100" />
			</direction>
		</gesture>
		<gesture name="picked" repeat="true">
			<direction name="none">
				<step duration="300" file="1.gif" />
				<step duration="300" file="2.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="2.gif" />
			</direction>
		</gesture>
		<gesture name="held" repeat="true">
			<direction name="none">
				<step duration="300" file="1.gif" />
				<step duration="300" file="2.gif" />
				<step duration="300" file="3.gif" />
				<step duration="300" file="2.gif" />
			</direction>
		</gesture>
		<gesture name="sliding" repeat="true">
			<direction name="none">
				<step duration="200" file="1.gif" />
				<step duration="200" file="2.gif" />
				<step duration="200" file="3.gif" />
				<step duration="200" file="2.gif" />
			</direction>
		</gesture>
		<gesture name="sliding-failing" repeat="true">
			<direction name="none">
				<step duration="200" file="1.gif" />
				<step duration="200" file="2.gif" />
				<step duration="200" file="3.gif" />
				<step duration="200" file="2.gif" />
			</direction>
		</gesture>
		<gesture name="standing" repeat="true">
			<direction name="none">
				<step duration="200" file="1.gif" />
				<step duration="200" file="2.gif" />
				<step duration="200" file="3.gif" />
				<step duration="200" file="2.gif" />
			</direction>
		</gesture>
		<gesture name="standing-failing" repeat="true">
			<direction name="none">
				<step duration="200" file="1.gif" />
				<step duration="200" file="2.gif" />
				<step duration="200" file="3.gif" />
				<step duration="200" file="2.gif" />
			</direction>
		</gesture>
	</gestures>		
</animes>
