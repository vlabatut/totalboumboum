	<gestures>
		<gesture name="burning" folder="burning" repeat="false" >
			<direction name="none">
				<step duration="150" file="1.gif" />
				<step duration="75" file="2.gif" />
				<step duration="75" file="3.gif" />
				<step duration="75" file="4.gif" />
				<step duration="75" file="5.gif" />
				<step duration="75" file="6.gif" />
			</direction>
		</gesture>
		
		<gesture name="hiding" >
			<direction name="none">
				<step />
			</direction>
		</gesture>
		
		<gesture name="spawning" folder="spawning" repeat="false" >
			<direction name="none">
				<step duration="150" file="1.gif" shadow="shadow1.png" shadowYShift="1" />
				<step duration="100" file="2.gif" shadow="shadow2.png" shadowYShift="1" />
				<step duration="100" file="3.gif" shadow="shadow3.png" shadowYShift="1" />
				<step duration="100" file="4.gif" shadow="shadow4.png" shadowYShift="2" />
			</direction>
		</gesture>
		
		<gesture name="standing" folder="standing" repeat="false" shadow="shadow.png" shadowYShift="2">
			<direction name="none">
				<step file="standing.gif" />
			</direction>
		</gesture>
		
	</gestures>
