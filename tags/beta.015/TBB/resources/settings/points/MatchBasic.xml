<?xml version="1.0" encoding="UTF-8"?>
<points
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:noNamespaceSchemaLocation="../../schemas/point.xsd">
	
	<notes>
		<line value="Players #1,2,3,4+ get 10,6,3,1,0 pts." />
		<line value="If some players have the same number of points, secondary scores are used: bombings, then items, then bombs." />
		<line value="If there's still a draw, points are shared." />
	</notes>

	<rankpoints invert="false" exaequoShare="true">
		<rankings>
			<total />
			<scores type="BOMBINGS"/>
			<scores type="ITEMS"/>
			<scores type="BOMBS"/>
		</rankings>	
		<values>
			<value value="10" />
			<value value="6" />
			<value value="3" />
			<value value="1" />
		</values>
	</rankpoints>
	
