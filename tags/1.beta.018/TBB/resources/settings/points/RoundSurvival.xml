<?xml version="1.0" encoding="UTF-8"?>
<points
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:noNamespaceSchemaLocation="../../schemas/point.xsd">
	
	<notes>
		<line value="Players #1,2,3,4,5+ get 12,8,5,2,1,0 pts." />
		<line value="If some players have the same number of points, scores are used: bombings, then items, then bombs." />
		<line value="If there's still a draw, points are shared." />
	</notes>

	<rankpoints invert="false" exaequoShare="true">
		<rankings>
			<scores type="TIME" />
			<scores type="BOMBINGS"/>
			<scores type="ITEMS"/>
			<scores type="BOMBS"/>
		</rankings>	
		<values>
			<value value="12" />
			<value value="8" />
			<value value="5" />
			<value value="2" />
			<value value="1" />
		</values>
	</rankpoints>
	
